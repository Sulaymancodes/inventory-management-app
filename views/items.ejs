<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
</head>
<body>
    <%- include('navbar') %>
    <h1>Items Page</h1>
    <form action="/searchedItems" method="POST">
        <input type="text" name="searchedItem">
        <button type="submit">Search</button>
    </form>
    <% if (items.length === 0) { %>
        <h1>No Items Found</h1>
    <% }  else { %>
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% items.map((item) => { %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.description %></td>
                <td><%= item.price %></td>
                <td><a href="/<%= item.id %>/edit">Edit</a></td>
                <td><a href="/<%= item.id %>/deleteItem">Delete</a></td>
            </tr>
        <% }) %>
    </table>
    <% } %>
</body>
</html>