<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/updateItem.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>Update Item</title>
</head>
<body>
    <%- include('navbar') %>
    <main class="edit-container">
        <h1 class="edit-title">Update Item</h1>
        <form action="/<%= item.id %>/edit" method="POST" class="edit-form">
            <div class="edit-form-group">
                <label for="itemName" class="edit-label">Item Name:</label>
                <input type="text" id="itemName" name="itemName" class="edit-input" value="<%= item.name %>" required>
            </div>

            <div class="edit-form-group">
                <label for="description" class="edit-label">Description:</label>
                <input type="text" id="description" name="description" class="edit-input" value="<%= item.description %>" required>
            </div>

            <div class="edit-form-group">
                <label for="price" class="edit-label">Price:</label>
                <input type="number" id="price" name="price" class="edit-input" step="0.01" value="<%= item.price %>" required>
            </div>

            <div class="edit-form-group">
                <label for="category" class="edit-label">Choose Your Category</label>
                <select id="category" name="categoryId" class="edit-select" required>
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>" <%= category.id === item.category_id ? "selected" : "" %>>
                            <%= category.name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="edit-button-group">
                <button type="button" class="edit-cancel-button" onclick="history.back()">Cancel</button>
                <button type="submit" class="edit-submit-button">Save Changes</button>
            </div>
        </form>
    </main>
    <%- include('footer') %>
</body>
</html>